<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Dashboard - TreasureCycl</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="css/style.css" rel="stylesheet">

</head>
<body>
  <nav class="navbar navbar-expand-lg navbar-light bg-light">
    <div class="container-fluid">
      <a class="navbar-brand" href="/"><h2><b>TreasureCycl</b></h2></a>
      <div class="navbar-nav ms-auto">
        <form action="/toggle-mode" method="POST" class="d-inline">
          <button type="submit" class="btn btn-outline-primary">
             Switch to <%= mode === 'Buyer' ? 'Seller' : 'Buyer' %> Mode
          </button>
        </form>
        <a class="nav-link" href="/logout">Logout</a>
      </div>
    </div>
  </nav>

  <div class="container mt-4 Dash">
    <h1><%= mode %> Dashboard</h1>
    <% if (mode === 'Seller' && ['Seller', 'Both'].includes(user.role)) { %>
      <a href="/listing/new" class="btn btn-success mb-3">Add New Listing</a>
    <% } %>
    <div class="row">
      <% listings.forEach(listing => { %>
        <div class="col-md-4 mb-4">
          <div class="card">
            <div class="card-body">
              <h5 class="card-title"><%= listing.title %></h5>
              <p class="card-text"><%= listing.description %></p>
              <p class="card-text"><strong>Price:</strong> $<%= listing.price %></p>
              <p class="card-text"><strong>Category:</strong> <%= listing.category %></p>
              <% if (mode === 'Seller' && user._id.toString() === listing.sellerId.toString()) { %>
                <form action="/listing/delete/<%= listing._id %>" method="POST" class="d-inline">
                  <button type="submit" class="btn btn-danger">Delete</button>
                </form>
              <% } else { %>
                <button class="btn btn-primary">Message Seller</button>
              <% } %>
            </div>
          </div>
        </div>
      <% }) %>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>