<% layout('layouts/boilerplate') %>
<div class="container py-5">
    <h1 class="display-4 fw-bold mb-4">User Profile</h1>
    <div class="card shadow mx-auto" style="max-width: 600px;">
        <div class="card-body">
            <h2 class="h4 fw-semibold mb-3">Welcome, <%= user.username %></h2>
            <p class="text-muted mb-4">Email: <%= user.email %></p>
            
            <h3 class="h5 fw-bold mt-4 mb-3">your Antiques</h3>
            <div class="row">
                <% listings.forEach(listing => { %>
                  <div class="col-md-4 mb-4">
                    <div class="card">
                      <div class="card-body">
                        <h5 class="card-title"><%= listing.title %></h5>
                        <p class="card-text"><%= listing.description %></p>
                        <p class="card-text"><strong>Price:</strong> $<%= listing.price %></p>
                        <p class="card-text"><strong>Category:</strong> <%= listing.category %></p>
                        <% if (mode === 'Seller' && user._id.toString() === listing.sellerId.toString()) { %>
                          <form action="/listing/delete/<%= listing._id %>" method="POST" class="d-inline">
                            <button type="submit" class="btn btn-danger">Delete</button>
                          </form>
                        <% } %>
                      </div>
                    </div>
                  </div>
                <% }) %>
              </div>
        </div>
    </div>
</div>