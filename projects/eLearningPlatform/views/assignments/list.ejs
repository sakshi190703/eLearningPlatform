<% layout('layouts/boilerplate') %>
<div class="container py-5">
    <div class="card shadow">
        <div class="card-body">
            <h1 class="card-title mb-4">Assignments for <%= course.title %></h1>
            <% if (success && success.length) { %>
                <div class="alert alert-success"><%= success %></div>
            <% } %>
            <% if (error && error.length) { %>
                <div class="alert alert-danger"><%= error %></div>
            <% } %>
            <ul class="list-group">
                <% if (assignments.length === 0) { %>
                    <li class="list-group-item">No assignments available for this course.</li>
                <% } else { %>
                    <% assignments.forEach(assignment => { %>
                        <li class="list-group-item d-flex justify-content-between align-items-center">
                            <span><%= assignment.title %></span>
                            <a href="/instructor/assignments/<%= assignment._id %>/grade" class="btn btn-add-course btn-sm">Grade Submissions</a>
                        </li>
                    <% }) %>
                <% } %>
            </ul>
            <a href="/instructor/dashboard" class="btn btn-add-course mt-3">Back to Dashboard</a>
        </div>
    </div>
</div>