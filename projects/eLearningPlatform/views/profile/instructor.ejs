<% layout('layouts/boilerplate') %>
<div class="container py-5">
    <div class="inst-dash card shadow" style="background-color: #203a43;">
        <div class="card-body">
            <h1 class="card-title mb-4" style="color : white;">Instructor Dashboard</h1>
            <p style="color : white;"><strong >Username:</strong> <%= user.username %></p>
            <p style="color : white;"><strong >Email:</strong> <%= user.email %></p>
            <p style="color : white;"><strong >Bio:</strong> <%= user.bio || 'No bio provided' %></p>
            <a href="/instructor/courses/new" class="  btn mt-3" style="background-color: #99dbf1">Create New Course</a>
            <h2 class="mt-5" style="color : white;">Your Courses</h2>
            <ul class="list-group mt-3" style="background-color: #203a43" >
                
                <% courses.forEach(course => { %>
                    <div class="list-group">
                    <li class="list-group-item" style="background-color: #99dbf1; border:2px solid black !important; ">
                        <div class="d-flex justify-content-between align-items-center" >
                            <div >
                                <a href="/instructor/courses/<%= course._id %>" style="text-decoration: none; color:black; "><%= course.title %></a>
                            </div>
                            <div>
                                <a href="/instructor/courses/<%= course._id %>/edit" class="btn  btn-sm" style="background-color: #0e491c; color : white;">Edit</a>
                                <form action="/instructor/courses/<%= course._id %>?_method=DELETE" method="POST" class="d-inline" onsubmit="return confirm('Are you sure you want to delete this course?');">
                                    <button type="submit" class="btn btn-sm" style="background-color: #933153; color : white;">Delete</button>
                                </form>
                                <a href="/instructor/courses/<%= course._id %>/assignments/new" class="btn  btn-sm" style="background-color: #15212f; color : white;" >Add Assignment</a>
                                <a href="/instructor/courses/<%= course._id %>/tests/new" class="btn btn-sm"  style="background-color: #15212f; color : white;">Add Test</a>
                            </div>
                        </div>
                        <!-- Grading Links -->
                        <div class="mt-3">
                            <h5>Grade Submissions</h5>
                            <div class="ms-3">
                                <a href="/instructor/courses/<%= course._id %>/tests" class="btn btn-outline-primary btn-sm mb-2">View Test Grades</a>
                                <a href="/instructor/courses/<%= course._id %>/assignments" class="btn btn-outline-primary btn-sm mb-2">Grade Assignments</a>
                            </div>
                        </div>
                    </li>
                  </div>
                  <br>
                <% }) %>
            
            </ul>
        </div>
    </div>
</div>