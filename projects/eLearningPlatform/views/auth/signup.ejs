<% layout('layouts/boilerplate') %>
<div class=" container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="auth card shadow">
                <div class="card-body">
                    <h2 class="text-center mb-4">Create your account</h2>
                    <form action="/signup" method="POST">
                        <div class="mb-3">
                            <label for="username" class="form-label">Username</label>
                            <input id="username" name="username" type="text" required class="form-control" placeholder="Username">
                        </div>
                        <div class="mb-3">
                            <label for="email" class="form-label">Email address</label>
                            <input id="email" name="email" type="email" required class="form-control" placeholder="Email address">
                        </div>
                        <div class="mb-3">
                            <label for="password" class="form-label">Password</label>
                            <input id="password" name="password" type="password" required class="form-control" placeholder="Password">
                        </div>
                        <div class="mb-3">
                            <label for="role" class="form-label">Profession - student, instructor</label>
                            <input id="role" name="role" type="text" required class="form-control" placeholder="role">
                        </div>
                        <button type="submit" class="auth-btn btn  w-100">Sign up</button>
                    </form>
                    <div class="text-center mt-3">
                        <p>Already have an account? <a href="/login" class="log-in">Log in</a></p>
                    </div>
                    <% if (success && success.length > 0) { %>
                        <div class="alert alert-success mt-3">
                            <%= success %>
                        </div>
                    <% } %>
                    <% if (error && error.length > 0) { %>
                        <div class="alert alert-danger mt-3">
                            <%= error %>
                        </div>
                    <% } %>
                </div>
            </div>
        </div>
    </div>
</div>